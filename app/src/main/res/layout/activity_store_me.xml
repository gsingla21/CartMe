<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreMe">
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/refreshstoreMe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMarketPic"
            android:layout_width="wrap_content"
            android:layout_height="157dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/r1" />

        <TextView
            android:id="@+id/ivMarketName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Market"
            android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerstoreview"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_above="@+id/paymentbtns"
            tools:listitem="@layout/sample_store">

        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/paymentbtns"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:foregroundGravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tvCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:background="@color/black"
                android:gravity="center"
                android:text="Cart"
                android:textSize="18sp" />

            <Button
                android:id="@+id/tvPay"
                android:layout_width="272dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Pay"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>